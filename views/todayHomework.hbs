<h2>Add {{student.FiristName}} {{student.LastName}} Today's homework</h2>

{{> message}}

<form action="/cramSchool/{{student.id}}/edit/homework/add" method="POST">

  <select name="subjectName" id="subject">
    {{#each subject}}
    <option value="{{this.id}}">{{this.subjectName}}</option>
    {{/each}}
  </select>

  <button type="submit" class="btn btn-outline-primary">Create</button>
</form>

<form action="/cramSchool/{{student.id}}/edit/homework/store" method="POST">
  <ul>
    {{#each todayHomework}}
    <li>
      {{!-- <input type="checkbox" name="finishedHomework" id="finishedHomework" value="finished"> --}}
      <label for="finishedHomework">{{"subject.subjectName"}}</label>
      <select name="status" id="status">
        <option value="Finished">Finished</option>
        <option value="Processing">Processing</option>
        <option value="DidNotFinish">Didn't Finish</option>
      </select>

    </li>
    {{/each}}
  </ul>

  <button type="submit" class="btn btn-outline-primary">Store</button>
</form>



<div>
  <button type="button" class="btn btn-outline-primary">
    <a href="/cramSchool" style="text-decoration:none">Back</a>
  </button>
</div>